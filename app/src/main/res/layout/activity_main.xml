<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ic_launcher_background"
              android:clipChildren="false"
              android:clipToPadding="false"
              android:gravity="center|bottom"
              android:paddingBottom="@dimen/dp_100">


    <!--layout_gravity属性和margin属性对Canvas绘制位置有影响，建议：放到父view操作这些-->
    <cn.app.cll.widget.ClipLinearLayout
        android:id="@+id/clipLayout"
        android:layout_width="@dimen/dp_222"
        android:layout_height="@dimen/dp_46"
        android:gravity="center"
        app:clip_anim_duration="100"
        app:clip_round_background="@color/color_white"
        app:clip_sel_scaleX="1.87"
        app:clip_sel_scaleY="1.87"
        app:clip_size="45"
        app:clip_support_anim="true"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivThirtySecond"
            style="@style/style_clip_circle"
            android:background="@drawable/sel_thirty_second"
            tools:ignore="ContentDescription"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivSixtySeconds"
            style="@style/style_clip_circle"
            android:background="@drawable/sel_sixty_seconds"
            tools:ignore="ContentDescription"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivTrisection"
            style="@style/style_clip_circle"
            android:background="@drawable/sel_trisection"
            tools:ignore="ContentDescription"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFifth"
            style="@style/style_clip_circle"
            android:background="@drawable/sel_fifth"
            tools:ignore="ContentDescription"/>
    </cn.app.cll.widget.ClipLinearLayout>
</LinearLayout>